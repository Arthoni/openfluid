  SET(CMAKE_BUILD_TYPE "Release")
ENDIF(NOT CMAKE_BUILD_TYPE)


SET(FUNCTIONS_BINARY_EXTENSION "${CMAKE_SHARED_LIBRARY_SUFFIX}mpi")


